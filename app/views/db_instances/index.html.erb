<p id="notice"><%= notice %></p>

<h1>Db Instances</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @db_instances.each do |db_instance| %>
      <tr>
        <td><%= db_instance.name %></td>
        <td><%= link_to 'Show', db_instance %></td>
        <td><%= link_to 'Edit', edit_db_instance_path(db_instance) %></td>
        <td><%= link_to 'Destroy', db_instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Db Instance', new_db_instance_path %>
